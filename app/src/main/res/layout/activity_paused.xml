<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/pause"
    android:orientation="vertical"
    android:layout_marginTop="60dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paused"
        android:layout_alignBottom="@id/main_shape_color"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:fontFamily="@font/main_app_font"
        android:layout_gravity="center"
        android:id="@+id/pauseTV"
        android:layout_marginBottom="100dp" />

    <Button
        android:id="@+id/continueplay"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_2"
        android:fontFamily="@font/main_app_font"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/main_app_font"
        android:text="Start New Game"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_2"/>

    <Button
        android:id="@+id/music_pauseBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/main_app_font"
        android:text="Turn ON/Off Music"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_2"/>

    <Button
        android:id="@+id/sound_pauseBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/main_app_font"
        android:text="Turn ON/Off Sound"
        android:textAllCaps="false"
        android:background="@drawable/custom_button_2"/>

</LinearLayout>