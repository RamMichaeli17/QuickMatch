<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_over_background">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/aboutus_popup_font"
        android:shadowColor="@color/black"
        android:shadowRadius="20"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/gameover_title"
        android:text="Game Over !"
        android:layout_gravity="center"
        android:textSize="50sp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Enter a nickname"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:textStyle="italic"
        android:id="@+id/nickname"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/custom_green_button"
        android:id="@+id/submit_game_over"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:background="@drawable/custom_red_button"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">
        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/facebook"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/facebook"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/instagram"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/facebook"
            android:layout_marginStart="20dp"
            android:id="@+id/instagram" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/whatsapp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/instagram"
            android:id="@+id/whatsapp"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/gmail"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/whatsapp"
            android:layout_marginStart="20dp"
            android:id="@+id/gmail"/>

    </LinearLayout>
</LinearLayout>