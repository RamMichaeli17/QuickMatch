<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/game_over_background">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/main_app_font"
        android:shadowColor="@color/black"
        android:shadowRadius="20"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="3dp"
        android:id="@+id/game_title"
        android:text="@string/game"
        android:layout_gravity="center"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
       android:layout_marginLeft="70dp"
        android:fontFamily="@font/main_app_font"
        android:shadowColor="@color/black"
        android:shadowRadius="20"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="3dp"
        android:id="@+id/over_title"
        android:text="@string/over"
        android:layout_gravity="center"
        android:textSize="50sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/levels_played"
        android:fontFamily="@font/main_app_font"
        android:textSize="23sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/time_played"
        android:fontFamily="@font/main_app_font"
        android:textSize="23sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/final_score"
        android:fontFamily="@font/main_app_font"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/nickname_et"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:id="@+id/nickname"
            android:fontFamily="@font/aboutus_popup_font"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_btn"
            android:textSize="18sp"
            android:background="@drawable/custom_blue_button"
            android:id="@+id/submit_game_over"
            android:layout_gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/main_app_font"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@drawable/custom_red_button"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_menu_btn"
            android:background="@drawable/custom_blue_button"
            android:id="@+id/mainmenu"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/main_app_font"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/replay_btn"
            android:background="@drawable/custom_blue_button"
            android:id="@+id/replay"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:padding="10dp"
            android:fontFamily="@font/main_app_font"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/facebook"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/facebook"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/instagram"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/facebook"
            android:layout_marginStart="20dp"
            android:id="@+id/instagram" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/whatsapp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/instagram"
            android:id="@+id/whatsapp"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:src="@drawable/gmail"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/whatsapp"
            android:layout_marginStart="20dp"
            android:id="@+id/gmail"/>

    </LinearLayout>
</LinearLayout>