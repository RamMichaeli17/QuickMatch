<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="-390dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fantastic"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/noot_aj"
        android:textSize="50sp"
        android:shadowColor="@color/blue"
        android:shadowDx="10"
        android:shadowDy="50"
        android:shadowRadius="15"
        android:id="@+id/fantasticWithAirplaneTV"/>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="175dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/airplaneflyinganimation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/airplaneAnimation"
        />
</LinearLayout>

<RelativeLayout
    android:layout_width="700dp"
    android:layout_height="300dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/welldoneAnimationRelativeLayout"
    android:visibility="invisible">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/welldone"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_speed="1"
            android:id="@+id/welldoneConfetiAnimation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well done!"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textSize="30sp"
        android:fontFamily="@font/noot_aj"
        android:alpha="0"
        android:id="@+id/welldoneTV"
        />
</RelativeLayout>



<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    android:layout_alignParentStart="true"
    android:id="@+id/newHighScoreRelativeLayout"
    android:layout_marginStart="-180dp"
    android:alpha="0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New High Score!"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/noot_aj"
        android:textSize="20sp"
        android:alpha="0.7"
        android:layout_toEndOf="@id/newhighscoretrophyimage"
        android:id="@+id/newhighscore"/>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/newhighscore"
        android:src="@drawable/highscores_numberonebadge"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:id="@+id/newhighscoretrophyimage"
        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireworks1"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        app:lottie_rawRes="@raw/fireworksanimation"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireworks2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="40dp"
        app:lottie_rawRes="@raw/fireworksanimation"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"/>
</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Moving shape!"
        android:textStyle="bold"
        android:fontFamily="@font/noot_aj"
        android:textSize="30dp"
        android:alpha="0"
        android:id="@+id/movingShapeAlert"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paused"
        android:layout_alignBottom="@id/mainshape_color"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:fontFamily="@font/noot_aj"
        android:visibility="invisible"
        android:id="@+id/pause"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">
    <Button
        android:id="@+id/continueplay"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/custom_button_2"
        android:fontFamily="@font/noot_aj"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        >

    </Button>

    <Button
        android:id="@+id/exit"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:fontFamily="@font/noot_aj"
        android:text="Exit"
        android:textAllCaps="false"
        android:visibility="gone"
        android:background="@drawable/custom_button_2"/>

    </LinearLayout>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/currenthighscoretrophy"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:id="@+id/currenthighscoretrophy"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noot_aj"
        android:text="37"
        android:layout_toRightOf="@id/currenthighscoretrophy"
        android:layout_marginTop="4.5dp"
        android:textSize="25dp"
        android:id="@+id/highestscoreTV"
        ></TextView>

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Points: 0"
        android:textStyle="bold"
        android:fontFamily="@font/noot_aj"
        android:textSize="25dp"
        android:layout_marginTop="3dp"
        >

    </TextView>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_below="@id/tv_points"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:paddingBottom="5dp"
        android:progressDrawable="@drawable/custom_progressbar"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:layout_below="@id/progressbar"
        android:id="@+id/mainshape_outline"
        android:layout_centerHorizontal="true"


        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:layout_below="@id/progressbar"
        android:id="@+id/mainshape_color"
        android:layout_centerHorizontal="true"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainshape_color"
        android:layout_centerHorizontal="true"
        android:id="@+id/rotatingAnswersLinearLayout"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <ImageView
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:layout_alignParentStart="true"
        android:id="@+id/fourColorsImage"
        android:src="@drawable/ic_button_blue"
        />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fourShapes_layout">

            <ImageView
                android:id="@+id/shape_TOP"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_strangeshape_a_outline"
                app:layout_constraintBottom_toTopOf="@+id/shape_RIGHT"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/shape_RIGHT"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_strangeshape_k_outline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/shape_BOTTOM"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/shape_LEFT"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:scaleType="centerInside"
                android:src="@drawable/ic_r_strangeshape_firstshape_outline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/shape_BOTTOM"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.503" />

            <ImageView
                android:id="@+id/shape_BOTTOM"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_strangeshape_e_outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shape_LEFT" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>








</RelativeLayout>