<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">

        <shape
            android:shape="rectangle">

            <gradient android:startColor="#FFB6A8" android:endColor="#FFFFFF" android:type="linear"
                android:angle="90"/>

            <corners android:bottomLeftRadius="20dp" android:topRightRadius="20dp"
                android:bottomRightRadius="60dp" android:topLeftRadius="60dp"/>

        </shape>


    </item>


    <item android:state_pressed="true">

        <shape
            android:shape="rectangle">

            <gradient android:startColor="#FFB6A8" android:endColor="#FFFFFF" android:type="linear"
                android:angle="180"/>

            <corners android:bottomLeftRadius="20dp" android:topRightRadius="20dp"
                android:bottomRightRadius="60dp" android:topLeftRadius="60dp"/>

        </shape>


    </item>





</selector>